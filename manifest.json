{
  "manifest_version": 2,
  "name": "snappin",
  "version": "0.1.0",
  "description": "Screenshot tool for pushing to an image storage and share",
  "icons": {
    "16": "img/snappin16.png",
    "48": "img/snappin48.png",
    "128": "img/snappin128.png"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "src/util/snappinDataUrl.js",
      "src/util/snappinImgur.js",
      "src/util/snappinPinterest.js",
      "src/background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "19": "img/snappin19.png",
      "38": "img/snappin38.png"
    },
    "default_title": "snappin"
  },
  "permissions": [
    "activeTab",
    "<all_urls>"
  ]
}
